<div class="register-container">
    <h2>Register</h2>
    <% if (error) { %>
        <p style="color:red;"><%= error %></p>
    <% } %>
    <form class="user-form" id="register-form">
        <input id="input_username" type="text" name="username" placeholder="Username" required><br>
        <input id="input_password" type="password" name="password" placeholder="Password" required><br>
        <button type="submit">Register</button>

        <a href="/login" class="user-form-link" id="register-button-user-form-link">se connecter</a>
    </form>
</div>
